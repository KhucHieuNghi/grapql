{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true,
      "jest": true
    },
    "extends": "airbnb-base",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      // below are variables defined in global.js
      "__base": "readonly",
      "__apis ": "readonly",
      "__libs": "readonly",
      "__models": "readonly",
      "__services": "readonly",
      "__controllers": "readonly",
      "__routers": "readonly",
      "__utils": "readonly",
      "Constants": "readonly",
      "ErrorCode": "readonly",
      "_randomString": "readonly",
      "_removeZeroAndPlusPrefix": "readonly",
      "_wrapModel": "readonly",
      "buildPaginationOpts": "readonly",
      "decoratePaginatedResult": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "import/no-dynamic-require": 0,
      "comma-dangle": ["error", "only-multiline"],
      "no-underscore-dangle": [0, { "allowAfterThis": true }],
      "prefer-promise-reject-errors": [0],
      "no-param-reassign": [0],
      "no-return-await": [0],
      "no-use-before-define": [0],
      "no-mixed-operators": [0],
      "no-useless-catch": [0]
    }
  }
  